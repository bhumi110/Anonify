<% layout("/layouts/boilerplate.ejs")%>

    <div class="col-8 offset-2">
        <br>
        <div class="heading">
            <h2>Feed üî•</h2>
            <p>The latest drama and advice from the community</p>
        </div>

        <div class="searchbar">
            <form class="d-flex" role="search">
                <input class="form-control me-2 feed-input" type="search"
                    placeholder="Search drama, advice, or confessions..." />
                <button class="btn btn-outline-dark feed-btn" type="submit" id="feed-btn">Search</button>
            </form>
        </div>

        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                üî• Trending
            </button>
            <ul class="dropdown-menu dropdown-menu-dark">
                <li><a class="dropdown-item" href="#" role="button">üî• Trending</a></li>
                <li><a class="dropdown-item" href="#" role="button">‚è∞ Latest</a></li>
                <li><a class="dropdown-item" href="#" role="button">üí¨ Most Comments</a></li>
            </ul>


            <div class="btn-group category" role="group" aria-label="Basic radio toggle button group">
                <input type="radio" class="btn-check" name="category" id="btnradio1" autocomplete="off" checked>
                <label class="btn btn-outline-info category-btn" for="btnradio1">All</label>

                <input type="radio" class="btn-check" name="category" id="btnradio2" autocomplete="off">
                <label class="btn btn-outline-info category-btn" for="btnradio2">Relationship</label>

                <input type="radio" class="btn-check" name="category" id="btnradio3" autocomplete="off">
                <label class="btn btn-outline-info category-btn" for="btnradio3">Family</label>

                <input type="radio" class="btn-check" name="category" id="btnradio4" autocomplete="off">
                <label class="btn btn-outline-info category-btn" for="btnradio4">Friendship</label>

                <input type="radio" class="btn-check" name="category" id="btnradio5" autocomplete="off">
                <label class="btn btn-outline-info category-btn" for="btnradio5">Hot Take</label>

                <input type="radio" class="btn-check" name="category" id="btnradio6" autocomplete="off">
                <label class="btn btn-outline-info category-btn" for="btnradio6">Drama</label>

                <input type="radio" class="btn-check" name="category" id="btnradio7" autocomplete="off">
                <label class="btn btn-outline-info category-btn" for="btnradio7">Advice</label>
            </div>

        </div>


        <div class="post-count ">
            <p>
                <%=allPosts.length%> posts found
            </p>
        </div>
    </div>



    <div class="col ">
        <% for(let post of allPosts){ %>

            <div class="card feedcard" style="width: 60vw; height: 30vh;">
                <a href="/post/<%=post._id%>" class="post-link">
                    <div class="card-body feedcard-body">
                        <h5 class="card-title feedcard-title">
                            <%=post.title%>
                        </h5>
                        <span class="badge rounded-pill text-bg-danger card-badge <%=post.category%>">
                            <%=post.category%>
                        </span>
                        <% if(post.anonymous){%>
                            <span class="badge rounded-pill text-bg-dark card-badge anonymous ">Anonymous</span>
                            <%}%>
                                <% if(!post.anonymous){%>
                                    <span class="badge rounded-pill text-bg-dark card-badge owner ">@
                                        <%=post.owner.username%>
                                    </span>
                                    <%}%>
                                        <p class="card-text feedcard-text">
                                            <%=post.story%>
                                        </p>

                                        <div class="card-elements">
                                            <div class="reactions d-flex gap-3" style="opacity: 0.5;">
                                                <button class="reaction-btn">üî• <span>
                                                        <%= post.reactions?.fire || 0 %>
                                                    </span></button>
                                                <button class="reaction-btn">üé≠ <span>
                                                        <%= post.reactions?.drama || 0 %>
                                                    </span></button>
                                                <button class="reaction-btn">üíÄ <span>
                                                        <%= post.reactions?.skull || 0 %>
                                                    </span></button>
                                                <button class="reaction-btn">üò≥ <span>
                                                        <%= post.reactions?.shock || 0 %>
                                                    </span></button>
                                            </div>
                                            <div class="feed-post mt-2 mb-2 text-end" style="font-size: 1.15rem;">
                                                <small class="text-mute card-text">
                                                    <i class="fa-regular fa-comment"></i>
                                                    <%=post.comments?.length || 0%>
                                                </small>
                                                <small class="text-mute card-text ms-3">

                                                    <i class="fa-regular fa-clock"></i>
                                                    <%= post.timeAgo %>
                                                </small>
                                            </div>
                                        </div>
                    </div>

            </div>
            </a>
            <%}%>
    </div>
    <br><br><br>